{% extends 'AnhContentBundle:Default:layout.html.twig' %}

{% block title %}{{ parent.title }}{% endblock %}

{% block content %}
    <h1>
        {{ parent.title }}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('anh_tied_content_admin_parent_edit', { 'section': section, 'id': resource.id }) }}">edit</a>
        {% endif %}
    </h1>

    {% if parent.content %}
        <div class="bbcode">{{ parent.content|raw }}</div>
    {% endif %}

    <ul>
        {% for tie in children %}
            {% include 'AnhTiedContentBundle:Default:_blockChild.html.twig' %}
        {% endfor %}
    </ul>
{% endblock %}
