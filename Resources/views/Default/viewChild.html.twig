{% extends 'AnhContentBundle:Default:layout.html.twig' %}

{% block title %}{{ child.title() }}{% endblock %}

{% block content %}
    <h1>
        <a href="{{ contentUrl(parent) }}">{{ parent.child.title }}</a>
    </h1>

    <h2>{{ child.title() }}</h2>

    <div class="bbcode">
        {{ child.content|raw }}
    </div>

    <div class="tied-content-navigation">
        {% if navigation.prev %}
            <a href="{{ contentUrl(navigation.prev) }}">&larr; prev</a>
        {% else %}
            <span>&larr; prev</span>
        {% endif %}

        <a href="{{ contentUrl(parent) }}">content</a>

        {% if navigation.next %}
            <a href="{{ contentUrl(navigation.next) }}">next &rarr;</a>
        {% else %}
            <span>next &rarr;</span>
        {% endif %}
    </div>
{% endblock %}
